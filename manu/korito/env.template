# Korito - The Heart of the Forest
# This is the ONLY place environment variables are loaded from
# Without Korito, the ngahere cannot function

# Supabase Configuration
SUPABASE_URL=your_supabase_project_url_here
SUPABASE_KEY=your_supabase_anon_key_here

# OpenAI Configuration (Cloud Kaitiaki)
OPENAI_API_KEY=your_openai_api_key_here

# Ollama Configuration (Local AI - Cloud Kaitiaki fallback)
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama3

# Cloud Kaitiaki Model Preferences
KAKA_PREFERRED_MODEL=gpt-4  # Options: gpt-4, gpt-3.5-turbo, llama3, codellama
RURU_PREFERRED_MODEL=gpt-4  # For summarization
TUI_PREFERRED_MODEL=gpt-4   # For text-to-speech

# Anthropic Configuration (Optional - for Claude models)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google AI Configuration (Optional - for Gemini models)
GOOGLE_AI_API_KEY=your_google_ai_api_key_here

# Database Configuration
DATABASE_URL=your_database_url_here

# Application Configuration
APP_NAME=Ngahere-OS
APP_VERSION=0.1.0
DEBUG=True
LOG_LEVEL=INFO

# Cultural Configuration
CULTURAL_MODE=True
LANGUAGE=en_NZ
